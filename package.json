{
  "name": "@asd14/use-crud-state",
  "version": "1.0.0",
  "description": "A state management custom React hook, similar to `useState`, with the ability to perform CRUD (create, read, update, delete) operations.",
  "license": "MIT",
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidmt"
  },
  "type": "module",
	"exports": "./dist/index.js",
	"types": "./dist/index.d.ts",
  "scripts": {
    "----UTIL": "",
    "setup": "npm ci --also=dev",
    "update": "ncu --interactive",
    "postupdate": "npm audit fix",
    "format": "prettier --write --prose-wrap=always .",
    "----LINT": "",
    "lint.js": "eslint src",
    "lint.md": "markdownlint '*.md' 'src/**/*.md'",
    "lint": "npm run lint.js && npm run lint.md",
    "typecheck": "tsc --project tsconfig.typecheck.json",
    "----TEST": "",
    "test": "jest",
    "test.types": "tsd dist",
    "coverage": "jest --coverage --runInBand --bail",
    "----BUILD": "",
    "build.js": "swc src --out-dir dist --config module.type=es6",
    "build.types": "tsc --project tsconfig.build-types.json",
    "prebuild": "rm -rf dist",
    "build": "npm run build.js",
    "release": "semantic-release",
    "----DEV": "",
    "start": "nodemon --watch src --ext ts,tsx --exec 'npm run build.js'",
    "start.example": "webpack serve --mode development --config example/webpack.config.cjs",
    "tdd": "jest --watch"
  },
  "dependencies": {
    "@swc/helpers": "^0.4.14",
    "debug": "^4.3.4",
    "uuid": "^9.0.0"
  },
  "peerDependencies": {
    "react": "^17 || ^18",
    "react-dom": "^17 || ^18"
  },
  "devDependencies": {
    "@asd14/eslint-config": "^8.3.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.24",
    "@swc/jest": "^0.2.24",
    "@testing-library/react": "^13.4.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.2.5",
    "@types/react": "^18.0.26",
    "@types/uuid": "^9.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-junit": "^15.0.0",
    "mini-css-extract-plugin": "^2.7.2",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.6.2",
    "prettier": "^2.8.1",
    "swc-loader": "^0.2.3",
    "tsd": "^0.25.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
